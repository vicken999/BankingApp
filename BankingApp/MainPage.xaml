<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BankingApp.MainPage">

    <StackLayout>
        <Frame BackgroundColor="Gray" Padding="24" CornerRadius="0">
            <Label Text="Capitec" HorizontalTextAlignment="Center" TextColor="Black" FontSize="36"/>
        </Frame>
        <Entry x:Name="DepositAmountEntry" Placeholder="Deposit Amount" />
        <Entry x:Name="DepositCommnetEntry" Placeholder="Deposit Comment" />

        <Button x:Name="DepositButton" Text="Deposit" Clicked="DepositButton_Clicked"/>
    </StackLayout>

</ContentPage>
